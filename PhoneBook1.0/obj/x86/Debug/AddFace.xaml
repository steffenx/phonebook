<Page
    x:Class="PhoneBook_β1._0.AddFace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhoneBook_β1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush  ImageSource="Assets/添加1.jpg"/>
        </Grid.Background>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--<AdaptiveTrigger MinWindowWidth="850"></AdaptiveTrigger>-->
                        <AdaptiveTrigger MinWindowHeight="680"></AdaptiveTrigger>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <!--<Setter Target="textblock.Margin" Value="5"></Setter>
                        <Setter Target="ellipseWithImageBrush.Width" Value="100"></Setter>
                        <Setter Target="ellipseWithImageBrush.Height" Value="100"></Setter>
                        <Setter Target="txtAddName.Margin" Value="5"></Setter>
                        <Setter Target="txtAddnum.Margin" Value="5"></Setter>
                        <Setter Target="txtAddsex.Margin" Value="5"></Setter>
                        <Setter Target="txtAddcity.Margin" Value="5"></Setter>
                        <Setter Target="txtAddmail.Margin" Value="5"></Setter>-->
                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <!--<AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>-->
                        <AdaptiveTrigger MinWindowHeight="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="textblock.Margin" Value="0"></Setter>
                        <Setter Target="ellipseWithImageBrush.Width" Value="50"></Setter>
                        <Setter Target="ellipseWithImageBrush.Height" Value="50"></Setter>
                        <Setter Target="txtAddName.Margin" Value="0"></Setter>
                        <Setter Target="txtAddnum.Margin" Value="0"></Setter>
                        <Setter Target="txtAddbir.Margin" Value="0"></Setter>
                        <Setter Target="txtAddcity.Margin" Value="0"></Setter>
                        <Setter Target="txtAddmail.Margin" Value="0"></Setter>
                        <Setter Target="Addbutton.Height" Value="40"></Setter>
                        <Setter Target="Addbutton.FontSize" Value="18"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel x:ConnectionId='1' AllowDrop="True"                                                        Margin="15">

            <TextBlock Text="新建PhoneBook联系人" HorizontalAlignment="Center" FontSize="20"></TextBlock>
            <TextBlock x:ConnectionId='2' Name="textblock" Text="拖拽图片进入APP添加头像"  FontSize="16" Margin="5"></TextBlock>
            <Ellipse x:ConnectionId='3' Name="ellipseWithImageBrush" Width="100" Height="100">
                <Ellipse.Fill >
                    <ImageBrush></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>

            <TextBox x:ConnectionId='4' Header="姓名"
                     Margin="5"
                     x:Name="txtAddName"/>
            <TextBox x:ConnectionId='5' Header="电话"
                     Margin="5"
                     x:Name="txtAddnum"></TextBox>
            <TextBox x:ConnectionId='6' Header="生日"
                     Margin="5"
                     x:Name="txtAddbir"></TextBox>
            <TextBox x:ConnectionId='7' Header="地址"
                     Margin="5"
                     x:Name="txtAddcity"></TextBox>
            <TextBox x:ConnectionId='8' Header="邮件"
                     Margin="5"
                     x:Name="txtAddmail"></TextBox>

            <TextBox x:ConnectionId='9' x:Name="AddImage" Opacity="0"></TextBox>
            
            <Button x:ConnectionId='10' Content="添加联系人"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Name="Addbutton"
                                         Opacity="0.8" Background="#332C5CE2" Width="170" Height="54" FontSize="22"></Button>
        </StackPanel>
    </Grid>
</Page>

