<Page x:ConnectionId='1'
    x:Class="PhoneBook_β1._0.WeatherHeFeng"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhoneBook_β1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        >

    <Grid x:ConnectionId='2' x:Name="gd_backimage">
        <!--<Grid.Background>
            <ImageBrush  ImageSource="Assets/多云.jpg"/>
        </Grid.Background>-->
        <ProgressBar x:ConnectionId='3' Name="mypro" Height="20"></ProgressBar>
        <ScrollViewer x:ConnectionId='4'                                       >
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" BorderBrush="#DDDDDD">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:ConnectionId='47' Name="cityname" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:ConnectionId='45' Grid.Column="0" Name="ico" HorizontalAlignment="Right" Width="70" Height="70"/>
                        <TextBlock x:ConnectionId='46' Grid.Column="1" Name="wea1"  FontSize="22" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBlock x:ConnectionId='44'  Name="Wea1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" >空气质量：</TextBlock>
                            <TextBlock x:ConnectionId='43' Grid.Column="1" Name="zhiliang" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" ></TextBlock>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:ConnectionId='41' Grid.Column="0" Name="fengxiang" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" ></TextBlock>
                            <TextBlock x:ConnectionId='42' Grid.Column="1" Name="fengsu" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">湿度：</TextBlock>
                            <TextBlock x:ConnectionId='40' Grid.Column="1" Name="shudu" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14"></TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" BorderThickness="0,1,0,1" BorderBrush="#DDDDDD">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,8,0,7">
                        <TextBlock FontSize="16">每日天气</TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,-0.333">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="30" BorderThickness="0,0,1,0" BorderBrush="#DDDDDD">
                            <TextBlock x:ConnectionId='36' Name="day1" HorizontalAlignment="Center"></TextBlock>
                            <Image x:ConnectionId='37' Name="ico1" Width="60" Height="60" HorizontalAlignment="Center"></Image>
                            <TextBlock x:ConnectionId='38' Name="wea2" HorizontalAlignment="Center"></TextBlock>
                            <TextBlock x:ConnectionId='39' Name="Wea2" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,-0.333">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" Margin="30" BorderThickness="0,0,1,0" BorderBrush="#DDDDDD">
                            <TextBlock x:ConnectionId='32' Name="day2" HorizontalAlignment="Center"></TextBlock>
                            <Image x:ConnectionId='33' Name="ico2" Width="60" Height="60" HorizontalAlignment="Center"></Image>
                            <TextBlock x:ConnectionId='34' Name="wea3" HorizontalAlignment="Center"></TextBlock>
                            <TextBlock x:ConnectionId='35' Name="Wea3" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,-0.333">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="2" Margin="30" BorderThickness="0,0,1,0" BorderBrush="#DDDDDD">
                            <TextBlock x:ConnectionId='28' Name="day3" HorizontalAlignment="Center"></TextBlock>
                            <Image x:ConnectionId='29' Name="ico3" Width="60" Height="60" HorizontalAlignment="Center"></Image>
                            <TextBlock x:ConnectionId='30' Name="wea4" HorizontalAlignment="Center"></TextBlock>
                            <TextBlock x:ConnectionId='31' Name="Wea4" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                    <TextBlock FontSize="16">每日详情</TextBlock>
                    <Grid Margin="10,35,0,35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock FontSize="14">白天</TextBlock>
                            <TextBlock x:ConnectionId='25' Name="morning" FontSize="12"></TextBlock>
                            <TextBlock Height="20"></TextBlock>
                            <TextBlock FontSize="14">夜晚</TextBlock>
                            <TextBlock x:ConnectionId='26' Name="night" FontSize="12"></TextBlock>
                            <TextBlock Height="20"></TextBlock>
                            <TextBlock FontSize="14">风速，公里/小时</TextBlock>
                            <TextBlock x:ConnectionId='27' FontSize="12" Name="fengshu"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock FontSize="14">降水概率</TextBlock>
                            <TextBlock x:ConnectionId='21' Name="rain" FontSize="12"></TextBlock>
                            <TextBlock FontSize="14">降水量</TextBlock>
                            <TextBlock x:ConnectionId='22' FontSize="12" Name="rainl"></TextBlock>
                            <TextBlock FontSize="14">紫外线强度</TextBlock>
                            <TextBlock x:ConnectionId='23' Name="ziwaixian" FontSize="12"></TextBlock>
                            <TextBlock FontSize="14">大气压强</TextBlock>
                            <TextBlock x:ConnectionId='24' Name="yaqiang" FontSize="12"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock FontSize="14">日出时间</TextBlock>
                            <TextBlock x:ConnectionId='19' Name="richu" FontSize="12"></TextBlock>
                            <TextBlock Height="40"></TextBlock>
                            <TextBlock FontSize="14">日落时间</TextBlock>
                            <TextBlock x:ConnectionId='20' Name="riluo" FontSize="12"></TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="3" BorderBrush="#DDDDDD">
                    <TextBlock FontSize="16">生活指数</TextBlock>
                    <Grid Margin="10,35,0,0">
                        <StackPanel>
                            <TextBlock>舒适度</TextBlock>
                            <TextBlock x:ConnectionId='5' Name="shzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='6' Name="shzsxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>洗车</TextBlock>
                            <TextBlock x:ConnectionId='7' Name="xczs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='8' Name="xcxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>穿衣</TextBlock>
                            <TextBlock x:ConnectionId='9' Name="cyzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='10' Name="cyxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>感冒</TextBlock>
                            <TextBlock x:ConnectionId='11' Name="gmzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='12' Name="gmxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>运动</TextBlock>
                            <TextBlock x:ConnectionId='13' Name="ydzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='14' Name="ydxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>紫外线</TextBlock>
                            <TextBlock x:ConnectionId='15' Name="zyxzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='16' Name="zyxxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                            <TextBlock>空气质量</TextBlock>
                            <TextBlock x:ConnectionId='17' Name="kqzs" FontSize="12"></TextBlock>
                            <TextBlock x:ConnectionId='18' Name="kqxx" FontSize="12"></TextBlock>
                            <TextBlock></TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

